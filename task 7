-- Task 7: Creating Views

-- 1. Create the Employees table
CREATE TABLE Employees (
    EmpID INTEGER PRIMARY KEY,
    Name TEXT NOT NULL,
    Department TEXT,
    Salary INTEGER
);

-- 2. Populate with example data
INSERT INTO Employees (EmpID, Name, Department, Salary) VALUES
(1, 'Alice', 'HR', 50000),
(2, 'Bob', 'Engineering', 75000),
(3, 'Charlie', 'HR', 52000),
(4, 'David', 'Engineering', 80000),
(5, 'Eva', 'Marketing', 60000);

-- 3. View for HR department
CREATE VIEW HR_Employees AS
SELECT EmpID, Name, Salary
FROM Employees
WHERE Department = 'HR';

-- 4. View for employees earning >60k
CREATE VIEW High_Salary AS
SELECT Name, Department, Salary
FROM Employees
WHERE Salary > 60000;

-- 5. View showing average salary per department
CREATE VIEW Department_Avg_Salary AS
SELECT Department, AVG(Salary) AS AvgSalary
FROM Employees
GROUP BY Department;
